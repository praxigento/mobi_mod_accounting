<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <!-- **************************************************** -->
    <!-- Configuration of the component's data provider.      -->
    <!-- **************************************************** -->
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">account_accounts_grid.account_accounts_grid_data_source</item>
            <!-- Prevent JS error: "this.source is not a function at UiClass.exportSorting (column.js:187)" -->
            <item name="deps" xsi:type="string">account_accounts_grid.account_accounts_grid_data_source</item>
        </item>
        <!-- data loading indicator is bound to grid columns area (spinner will not disappear w/o it) -->
        <item name="spinner" xsi:type="string">account_accounts_columns</item>
    </argument>

    <!-- **************************************************** -->
    <!-- Data Source (is used by data provider).              -->
    <!-- **************************************************** -->
    <dataSource name="account_accounts_grid_data_source"
                component="Magento_Ui/js/grid/provider">
        <argument name="dataProvider" xsi:type="configurableObject">
            <!--https://magento.stackexchange.com/questions/248611/magento-2-grid-data-source-definition-in-compact-form -->
            <argument name="class" xsi:type="string">Praxigento\Core\App\Ui\DataProvider\Grid\Base</argument>
            <argument name="name" xsi:type="string">account_accounts_grid_data_source</argument>
            <argument name="gridQueryBuilder" xsi:type="object">Praxigento\Accounting\Ui\DataProvider\Grid\Account\Query</argument>
        </argument>
    </dataSource>

    <!-- **************************************************** -->
    <!-- Grid header (filter, bookmarks, pager, ...).         -->
    <!-- **************************************************** -->
    <listingToolbar name="listing_top">
        <settings>
            <sticky>false</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>

    <!-- **************************************************** -->
    <!-- Grid Columns                                         -->
    <!-- **************************************************** -->
    <columns name="account_accounts_columns">

        <column name="id"
                component="Praxigento_Core/js/grid/column/integer">
            <settings>
                <dataType>number</dataType>
                <filter>text</filter>
                <label translate="true">Account ID</label>
                <sorting>desc</sorting>
            </settings>
        </column>

        <column name="custName"
                component="Praxigento_Accounting/js/grid/account/accounts/column/link/cust_name">
            <settings>
                <dataType>text</dataType>
                <filter>text</filter>
                <label translate="true">Customer</label>
            </settings>
        </column>

        <column name="custEmail">
            <settings>
                <dataType>text</dataType>
                <filter>text</filter>
                <label translate="true">Email</label>
            </settings>
        </column>

        <column name="custGroup">
            <settings>
                <dataType>text</dataType>
                <filter>text</filter>
                <label translate="true">Group</label>
            </settings>
        </column>

        <column name="balance"
                component="Praxigento_Core/js/grid/column/decimal">
            <settings>
                <dataType>price</dataType>
                <filter>textRange</filter>
                <label translate="true">Balance</label>
            </settings>
        </column>

        <column name="asset">
            <settings>
                <dataType>text</dataType>
                <filter>text</filter>
                <label translate="true">Asset</label>
            </settings>
        </column>

    </columns>
</listing>
