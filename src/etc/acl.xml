<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Praxigento_Core::mobi">
                    <resource id="Praxigento_Core::admin">
                        <resource id="Praxigento_Accounting::admin_accounts" title="Accounting" sortOrder="100">
                            <resource id="Praxigento_Accounting::admin_accounts_accounts"
                                    title="Accounts" sortOrder="100"/>
                            <resource id="Praxigento_Accounting::admin_accounts_operations"
                                    title="Operations" sortOrder="200"/>
                            <resource id="Praxigento_Accounting::admin_accounts_transactions"
                                    title="Transactions" sortOrder="300"/>
                            <resource id="Praxigento_Accounting::admin_accounts_types_asset"
                                    title="Asset Types" sortOrder="400"/>
                            <resource id="Praxigento_Accounting::admin_accounts_types_oper"
                                    title="Operation Types" sortOrder="500"/>
                        </resource>
                    </resource>
                    <resource id="Praxigento_Core::api">
                        <resource id="Praxigento_Accounting::accounting" title="Accounting">
                            <resource id="Praxigento_Accounting::replicate" title="Replicate data"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
