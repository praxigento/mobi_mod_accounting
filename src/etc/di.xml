<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- *** -->
    <!-- API -->
    <!-- *** -->
    <preference for="\Praxigento\Accounting\Api\Transaction\GetInterface"
            type="\Praxigento\Accounting\Api\Transaction\Get"/>


    <!-- ********************** -->
    <!-- Console (CLI Commands) -->
    <!-- ********************** -->
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="prxgt_acc_cmd_balance_calc" xsi:type="object">\Praxigento\Accounting\Cli\Cmd\Balance\Calc</item>
                <item name="prxgt_acc_cmd_balance_reset" xsi:type="object">\Praxigento\Accounting\Cli\Cmd\Balance\Reset</item>
            </argument>
        </arguments>
    </type>


    <!-- **** -->
    <!-- Repo -->
    <!-- **** -->
    <preference for="\Praxigento\Accounting\Repo\Agg\IOperation"
                type="\Praxigento\Accounting\Repo\Agg\Def\Operation"/>
    <preference for="\Praxigento\Accounting\Repo\Agg\ITransaction"
            type="\Praxigento\Accounting\Repo\Agg\Def\Transaction"/>
    <preference for="Praxigento\Accounting\Repo\IModule"
            type="Praxigento\Accounting\Repo\Def\Module"/>

    <!-- ******** -->
    <!-- Services -->
    <!-- ******** -->
    <preference for="Praxigento\Accounting\Service\IAccount"
            type="Praxigento\Accounting\Service\Account\Call"/>
    <preference for="Praxigento\Accounting\Service\IBalance"
            type="Praxigento\Accounting\Service\Balance\Call"/>
    <preference for="\Praxigento\Accounting\Service\Balance\Get\ITurnover"
            type="\Praxigento\Accounting\Service\Balance\Get\Turnover"/>
    <preference for="\Praxigento\Accounting\Service\Balance\IGet"
            type="\Praxigento\Accounting\Service\Balance\Get"/>
    <preference for="Praxigento\Accounting\Service\IOperation"
            type="Praxigento\Accounting\Service\Operation\Call"/>
    <preference for="Praxigento\Accounting\Service\ITransaction"
            type="Praxigento\Accounting\Service\Transaction\Call"/>

</config>
