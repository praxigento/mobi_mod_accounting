<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/prxgt/account/asset/get" method="POST">
        <!-- Get asset data for customer (assets, accounts, balances). -->
        <service class="Praxigento\Accounting\Api\Web\Account\Asset\GetInterface" method="exec"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/prxgt/account/asset/transfer/init" method="POST">
        <!-- Get customer data to init asset transfer dialog (assets, balances & customer info). -->
        <service class="Praxigento\Accounting\Api\Web\Account\Asset\Transfer\InitInterface" method="exec"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
